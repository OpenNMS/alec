<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <!-- Configuration properties -->
    <cm:property-placeholder id="connectorProperties" persistent-id="org.opennms.oce.connector.client" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="eventTopic" value="events"/>
            <cm:property name="alarmTopic" value="alarms"/>
            <cm:property name="nodeTopic" value="nodes"/>
            <cm:property name="url" value="http://127.0.0.1:8980/opennms"/>
            <cm:property name="username" value="admin"/>
            <cm:property name="password" value="admin"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="configAdmin" interface="org.osgi.service.cm.ConfigurationAdmin" />
    <bean id="alarmRepository" class="org.opennms.oce.connector.impl.AlarmRepositoryImpl" init-method="init" destroy-method="destroy">
        <argument ref="configAdmin"/>
        <property name="eventTopic" value="${eventTopic}"/>
        <property name="alarmTopic" value="${alarmTopic}"/>
        <property name="nodeTopic" value="${nodeTopic}"/>
    </bean>
    <service ref="alarmRepository" interface="org.opennms.oce.connector.api.AlarmRepository"/>

    <bean id="modelProvider" class="org.opennms.oce.connector.impl.ModelProviderImpl"/>
    <service ref="modelProvider" interface="org.opennms.oce.connector.api.ModelProvider"/>

    <bean id="restClient" class="org.opennms.oce.connector.impl.OpennmsRestClient">
        <argument value="${url}"/>
        <argument value="${username}"/>
        <argument value="${password}"/>
    </bean>

    <bean id="eventForwarder" class="org.opennms.oce.connector.impl.EventForwarderImpl">
        <argument ref="restClient"/>
    </bean>
    <service ref="eventForwarder" interface="org.opennms.oce.connector.api.EventForwarder"/>
</blueprint>
