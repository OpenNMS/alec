        <bundle dependency="true">wrap:mvn:com.google.code.gson/gson/${gson.version}</bundle>
        <bundle dependency="true">wrap:mvn:org.jvnet.jaxb2_commons/jaxb2-basics-tools/0.11.1</bundle>
