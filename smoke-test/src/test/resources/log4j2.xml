<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %c{1.}: %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.hibernate" additivity="false" level="WARN">
      <Appender-Ref ref="Console"/>
    </Logger>
    <Logger name="jinjava" additivity="false" level="WARN">
      <Appender-Ref ref="Console"/>
    </Logger>
    <Logger name="com.jcraft.jsch" additivity="false" level="ERROR">
      <Appender-Ref ref="Console"/>
    </Logger>

    <!-- Apache HTTPClient from the Java Docker stuff is _terribly_ noisy -->
    <Logger name="com.github.dockerjava" additivity="false" level="WARN">
      <Appender-Ref ref="Console"/>
    </Logger>
    <Logger name="com.github.dockerjava" additivity="false" level="OFF" />
    <!-- the useful bits are in the headers -->
    <Logger name="org.apache.http.impl" additivity="false" level="INFO">
      <Appender-Ref ref="Console"/>
    </Logger>
    <Logger name="org.apache.http.wire" additivity="false" level="INFO">
      <Appender-Ref ref="Console"/>
    </Logger>

    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
