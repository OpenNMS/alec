<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <!-- Configuration properties -->
    <cm:property-placeholder id="modelProperties" persistent-id="org.opennms.oce.model" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="metamodelPath" value=""/>
            <cm:property name="inventoryPath" value=""/>
        </cm:default-properties>
    </cm:property-placeholder>

    <service interface="org.opennms.oce.model.api.ModelBuilder">
        <bean class="org.opennms.oce.model.impl.ModelBuilderImpl">
            <argument ref="blueprintBundleContext"/>
            <property name="metamodelPath" value="${metamodelPath}"/>
            <property name="inventoryPath" value="${inventoryPath}"/>
        </bean>
    </service>
</blueprint>
